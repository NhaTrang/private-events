<% provide(:title, "New Event") %>

<div class="container text-center">
	<h3>New Event</h3>

	<%= form_for @event do |f| %>
		<%= render 'shared/error', object: f.object %>
		<%= f.label :title %>
		<%= f.text_field :title %><br>

		<%= f.label :description %>
		<%= f.text_field :descript %><br>

		<%= f.label :location %>
		<%= f.text_field :location %><br>

		<%= f.label :date %>
		<%= f.text_field :date, id: "dateform" %><br>

		<%= f.submit 'Submit', :class => 'btn btn-default' %>
	<% end %>
</div>