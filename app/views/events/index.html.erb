<% provide(:title, "Events List") %>

<div class="container text-center">
	<h3>Events List</h3>

	<h4>Upcoming Events</h4>
	<% @events.each do |f| %>
		<%= link_to f.title, event_info_path(f.id) %>
		<%= f.date %>
		<br>
	<% end %>
	<h4>Past Events</h4>
	<% @events.each do |f| %>
		<%= link_to f.title, event_info_path(f.id) %>
		<%= f.date %>
		<br>
	<% end %>
</div>